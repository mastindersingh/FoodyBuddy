<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:textSize="@dimen/_10ssp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/layout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/item_message_message"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_countryFeed_profileImage"
            android:background="@drawable/bubleft" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/item_countryFeed_profileImage"
            android:visibility="visible"
            android:layout_below="@+id/item_message_message"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="right|center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/item_message_message2"
            android:textSize="@dimen/_12ssp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/bubright"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/item_inboxFeed_profileImage2"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/item_inboxFeed_profileImage2"
            android:layout_below="@+id/item_message_message2"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>